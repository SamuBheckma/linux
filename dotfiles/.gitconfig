[core]
  editor = nvim
  fileMode = true

[init]
  defaultBranch = main

[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = yellow
  untracked = red

[alias]
  st = status
  s = status -s
  a = add
  aa = add --all
  c = commit
  am = commit --amend --no-edit
  br = branch
  bra = branch -a
  co = checkout
  cob = checkout -b
  l = log --oneline
  ll = log --oneline -20
  lg = log --graph --oneline --all --decorate
  d = diff
  ds = diff --staged
  p = push
  pf = push --force-with-lease
  pl = pull
  r = rebase
  ri = rebase -i
  rc = rebase --continue
  ra = rebase --abort
  undo = reset --soft HEAD^
  unstage = reset HEAD

[push]
  default = current

[fetch]
  prune = true

[diff]
  algorithm = patience
